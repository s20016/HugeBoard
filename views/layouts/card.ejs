<% categories.forEach(cat => { %>
  <div class="card mb-2">
    <div class="card-body">
      <h5 class="card-title"><%= cat.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted">
        <%= cat.createdAt.toLocaleDateString() %> 
      </h6>
      <p class="card-text">
        <%= cat.description %> 
      </p>
      <a href="../thread" class="card-link">Read More</a>
    </div>
  </div>
<% }) %> 